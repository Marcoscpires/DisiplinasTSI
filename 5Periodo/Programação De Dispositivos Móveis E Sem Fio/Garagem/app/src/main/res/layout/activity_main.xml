<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rg_tipo">
        <RadioButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Automóvel"
            android:id="@+id/rb_automovel">
        </RadioButton>
        <RadioButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Motocicleta"
            android:id="@+id/rb_motocicleta">
        </RadioButton>
        <RadioButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Caminhão"
            android:id="@+id/rb_caminhao">
        </RadioButton>
    </RadioGroup>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_marca"
        android:hint="Marca do veiculo">
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_modelo"
        android:hint="Modelo do veiculo">
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/ed_placa"
        android:hint="Placa">
    </EditText>
    <EditText
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/ed_ano"
        android:inputType="number"
        android:hint="Ano">
    </EditText>
    <EditText
        android:layout_width="0sp"
        android:layout_weight="1.7"
        android:layout_height="wrap_content"
        android:id="@+id/ed_valor"
        android:inputType="number"
        android:hint="Valor">
    </EditText>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:layout_gravity="center_horizontal"
        android:onClick="adicionar"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:id="@+id/lista_veiculos"/>
</LinearLayout>